<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/mesajSize"
    android:background="@color/mesajArkaPlan"
    android:gravity="right"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardSag"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mesajKutusuMargin"
        app:cardBackgroundColor="@color/sagMesajKutusuColor"
        app:cardCornerRadius="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewBen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="#eefffc"
                android:textSize="@dimen/isimzaman" />

            <TextView
                android:id="@+id/textViewMesajim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#eefffc"
                android:textSize="@dimen/mesajSize" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewZamanim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#eefffc"
                    android:textSize="@dimen/isimzaman" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>